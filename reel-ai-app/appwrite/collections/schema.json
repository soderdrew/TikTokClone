{
    "databases": [
        {
            "$id": "reelai-main",
            "name": "ReelAI Main Database",
            "collections": [
                {
                    "$id": "profiles",
                    "name": "User Profiles",
                    "permissions": ["read(\"any\")", "create(\"users\")", "update(\"users\")", "delete(\"users\")"],
                    "attributes": [
                        {
                            "key": "userId",
                            "type": "string",
                            "size": 36,
                            "required": true
                        },
                        {
                            "key": "name",
                            "type": "string",
                            "size": 100,
                            "required": true
                        },
                        {
                            "key": "bio",
                            "type": "string",
                            "size": 500,
                            "default": ""
                        },
                        {
                            "key": "avatarUrl",
                            "type": "string",
                            "size": 255,
                            "default": ""
                        },
                        {
                            "key": "recipesCount",
                            "type": "integer",
                            "required": true,
                            "min": 0,
                            "default": 0
                        },
                        {
                            "key": "followersCount",
                            "type": "integer",
                            "required": true,
                            "min": 0,
                            "default": 0
                        },
                        {
                            "key": "followingCount",
                            "type": "integer",
                            "required": true,
                            "min": 0,
                            "default": 0
                        }
                    ],
                    "indexes": [
                        {
                            "key": "userId_unique",
                            "type": "unique",
                            "attributes": ["userId"]
                        }
                    ]
                },
                {
                    "$id": "videos",
                    "name": "Recipe Videos",
                    "permissions": ["read(\"any\")", "create(\"users\")", "update(\"users\")", "delete(\"users\")"],
                    "attributes": [
                        {
                            "key": "userId",
                            "type": "string",
                            "size": 36,
                            "required": true
                        },
                        {
                            "key": "title",
                            "type": "string",
                            "size": 100,
                            "required": true
                        },
                        {
                            "key": "description",
                            "type": "string",
                            "size": 1000,
                            "default": ""
                        },
                        {
                            "key": "videoUrl",
                            "type": "string",
                            "size": 255,
                            "required": true
                        },
                        {
                            "key": "thumbnailUrl",
                            "type": "string",
                            "size": 255,
                            "default": ""
                        },
                        {
                            "key": "duration",
                            "type": "integer",
                            "required": true,
                            "min": 0
                        },
                        {
                            "key": "cuisine",
                            "type": "string",
                            "size": 50,
                            "default": ""
                        },
                        {
                            "key": "difficulty",
                            "type": "string",
                            "size": 20,
                            "default": "medium"
                        },
                        {
                            "key": "cookingTime",
                            "type": "integer",
                            "required": true,
                            "min": 0
                        },
                        {
                            "key": "likesCount",
                            "type": "integer",
                            "required": true,
                            "min": 0,
                            "default": 0
                        },
                        {
                            "key": "commentsCount",
                            "type": "integer",
                            "required": true,
                            "min": 0,
                            "default": 0
                        },
                        {
                            "key": "createdAt",
                            "type": "datetime",
                            "required": true
                        }
                    ],
                    "indexes": [
                        {
                            "key": "userId",
                            "type": "key",
                            "attributes": ["userId"]
                        },
                        {
                            "key": "cuisine",
                            "type": "key",
                            "attributes": ["cuisine"]
                        },
                        {
                            "key": "createdAt",
                            "type": "key",
                            "attributes": ["createdAt"]
                        }
                    ]
                },
                {
                    "$id": "likes",
                    "name": "Video Likes",
                    "permissions": ["read(\"any\")", "create(\"users\")", "update(\"users\")", "delete(\"users\")"],
                    "attributes": [
                        {
                            "key": "userId",
                            "type": "string",
                            "size": 36,
                            "required": true
                        },
                        {
                            "key": "videoId",
                            "type": "string",
                            "size": 36,
                            "required": true
                        },
                        {
                            "key": "createdAt",
                            "type": "datetime",
                            "required": true
                        }
                    ],
                    "indexes": [
                        {
                            "key": "user_video_unique",
                            "type": "unique",
                            "attributes": ["userId", "videoId"]
                        },
                        {
                            "key": "videoId",
                            "type": "key",
                            "attributes": ["videoId"]
                        }
                    ]
                },
                {
                    "$id": "comments",
                    "name": "Video Comments",
                    "permissions": ["read(\"any\")", "create(\"users\")", "update(\"users\")", "delete(\"users\")"],
                    "attributes": [
                        {
                            "key": "userId",
                            "type": "string",
                            "size": 36,
                            "required": true
                        },
                        {
                            "key": "videoId",
                            "type": "string",
                            "size": 36,
                            "required": true
                        },
                        {
                            "key": "content",
                            "type": "string",
                            "size": 1000,
                            "required": true
                        },
                        {
                            "key": "createdAt",
                            "type": "datetime",
                            "required": true
                        }
                    ],
                    "indexes": [
                        {
                            "key": "videoId",
                            "type": "key",
                            "attributes": ["videoId"]
                        },
                        {
                            "key": "createdAt",
                            "type": "key",
                            "attributes": ["createdAt"]
                        }
                    ]
                },
                {
                    "$id": "saved_recipes",
                    "name": "Saved Recipes",
                    "permissions": ["read(\"any\")", "create(\"users\")", "update(\"users\")", "delete(\"users\")"],
                    "attributes": [
                        {
                            "key": "userId",
                            "type": "string",
                            "size": 36,
                            "required": true
                        },
                        {
                            "key": "videoId",
                            "type": "string",
                            "size": 36,
                            "required": true
                        },
                        {
                            "key": "createdAt",
                            "type": "datetime",
                            "required": true
                        }
                    ],
                    "indexes": [
                        {
                            "key": "user_video_unique",
                            "type": "unique",
                            "attributes": ["userId", "videoId"]
                        },
                        {
                            "key": "userId",
                            "type": "key",
                            "attributes": ["userId"]
                        }
                    ]
                }
            ]
        }
    ]
} 